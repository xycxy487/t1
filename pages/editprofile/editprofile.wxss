/* pages/editProfile/editProfile.wxss */
.edit-profile-container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

input, textarea {
  width: 100%;
  padding: 15rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.avatar-uploader {
  display: flex;
  align-items: center;
}

.avatar-uploader image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.save-btn {
  margin-top: 50rpx;
  background-color: #07C160;
  color: white;
}
