<!--pages/social/social.wxml-->
<view class="social-container">
  <!-- 发布动态 -->
  <view class="post-bar">
    <input placeholder="分享你的旅行故事..." class="post-input" bindinput="onContentInput" value="{{postContent}}" />
    <button class="post-btn" bindtap="submitPost">发布</button>
  </view>
  
  <!-- 动态列表 -->
  <view class="feed-list">
    <view class="feed-item" wx:for="{{feeds}}" wx:key="id">
      <view class="feed-user">
        <image src="{{item.avatar}}" class="feed-avatar"></image>
        <view class="feed-user-info">
          <view class="feed-username">{{item.username}}</view>
          <view class="feed-time">{{item.time}}</view>
        </view>
      </view>
      <view class="feed-content">{{item.content}}</view>
      <view class="feed-actions">
        <view class="feed-action" bindtap="likeFeed" data-id="{{item.id}}">
          <image src="{{item.liked ? '/images/tab/liked.png' : '/images/tab/like.png'}}" class="action-icon"></image>
          <text>{{item.likes}}</text>
        </view>
        <view class="feed-action" bindtap="commentFeed" data-id="{{item.id}}">
          <image src="/images/tab/comment.png" class="action-icon"></image>
          <text>{{item.comments}}</text>
        </view>
        <view class="feed-action" bindtap="shareFeed" data-id="{{item.id}}">
          <image src="/images/tab/share.png" class="action-icon"></image>
          <text>分享</text>
        </view>
      </view>
    </view>
  </view>
</view>