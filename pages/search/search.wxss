/* pages/search/search.wxss */
.search-container {
  padding: 20rpx;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  padding: 0 20rpx;
  height: 60rpx;
}

.search-cancel {
  margin-left: 20rpx;
  background: none;
  color: #666;
  font-size: 28rpx;
  padding: 0;
}

.search-history, .hot-search {
  margin-top: 40rpx;
}

.history-header, .hot-header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.history-list, .hot-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item, .hot-item {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.search-results {
  margin-top: 30rpx;
}

.result-count {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.result-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.destination-item, .attraction-item {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.destination-image, .attraction-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.destination-info, .attraction-info {
  flex: 1;
}

.destination-name, .attraction-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.destination-desc {
  font-size: 26rpx;
  color: #666;
}

.attraction-location {
  font-size: 26rpx;
  color: #666;
}

.guide-item {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.guide-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.guide-meta {
  font-size: 26rpx;
  color: #999;
}

.guide-meta text {
  margin-right: 20rpx;
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.no-result-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.no-result-text {
  font-size: 28rpx;
  color: #999;
}
