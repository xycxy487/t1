/* pages/orders/orders.wxss */
.orders-container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  white-space: nowrap;
  overflow-x: auto;
}

.tab-item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.tab-item.active {
  color: #07C160;
  border-bottom: 4rpx solid #07C160;
}

/* 订单项样式 */
.orders-list {
  margin-top: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
}

.order-status.unpaid {
  color: #f44;
}

.order-status.paid {
  color: #ff976a;
}

.order-status.completed {
  color: #07C160;
}

.order-status.canceled {
  color: #999;
}

.order-products {
  padding: 20rpx 0;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 26rpx;
  color: #f44;
}

.order-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-total {
  text-align: right;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.total-price {
  font-weight: bold;
  color: #f44;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #07C160;
  color: #fff;
}

.action-btn.cancel {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  background-color: #07C160;
  color: white;
  width: 60%;
}
