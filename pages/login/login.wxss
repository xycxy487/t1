.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.avatar-section {
  margin-bottom: 60rpx;
}

.avatar-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding: 0;
  background-color: #f5f5f5;
  overflow: hidden;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #999;
  text-align: center;
  width: 100%;
}

.input-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.username-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
}

.loading {
  font-size: 28rpx;
  color: #666;
}