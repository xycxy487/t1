/* pages/comments/comments.wxss */
.container {
  padding: 20rpx;
}

.original-post {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-info .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-info .username {
  font-weight: bold;
  margin-right: 15rpx;
}

.user-info .time {
  font-size: 24rpx;
  color: #999;
}

.content {
  margin-bottom: 20rpx;
}

.images image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
}

.comments-list {
  margin-bottom: 120rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.comment-content {
  flex: 1;
}

.comment-content .username {
  font-weight: bold;
  margin-right: 10rpx;
}

.comment-content .time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
}

.comment-input-input {
  flex: 1;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
  margin-right: 15rpx;
}
