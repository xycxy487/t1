<!-- pages/settings/settings.wxml -->
<view class="settings-container">
  <!-- 顶部标题 -->
  <view class="header">
    <view class="title">设置</view>
  </view>
  
  <!-- 设置项列表 -->
  <view class="settings-list">
    <!-- 账号设置 -->
    <view class="settings-group">
      <view class="group-title">账号设置</view>
      <view class="settings-item" bindtap="navigateToAccountSettings">
        <text>账号与安全</text>
      </view>
      <view class="settings-item" bindtap="navigateToPrivacySettings">
        <text>隐私设置</text>
      </view>
    </view>
    
    <!-- 通知设置 -->
    <view class="settings-group">
      <view class="group-title">通知设置</view>
      <view class="settings-item">
        <text>消息通知</text>
        <switch checked="{{notificationEnabled}}" bindchange="toggleNotification"/>
      </view>
      <view class="settings-item">
        <text>系统通知</text>
        <switch checked="{{systemNotificationEnabled}}" bindchange="toggleSystemNotification"/>
      </view>
    </view>
    
    <!-- 通用设置 -->
    <view class="settings-group">
      <view class="group-title">通用</view>
      <view class="settings-item" bindtap="clearCache">
        <text>清除缓存</text>
        <text class="cache-size">{{cacheSize}}</text>
      </view>
      <view class="settings-item" bindtap="checkUpdate">
        <text>检查更新</text>
        <text class="version">v{{version}}</text>
      </view>
    </view>
    
    <!-- 关于与帮助 -->
    <view class="settings-group">
      <view class="group-title">关于与帮助</view>
      <view class="settings-item" bindtap="navigateToAbout">
        <text>关于我们</text>
      </view>
      <view class="settings-item" bindtap="navigateToFeedback">
        <text>意见反馈</text>
      </view>
      <view class="settings-item" bindtap="navigateToHelpCenter">
        <text>帮助中心</text>
      </view>
    </view>
    
    <!-- 退出登录 -->
    <view class="logout-btn" bindtap="showLogoutConfirm">
      <text>退出登录</text>
    </view>
  </view>
</view>
