<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <!-- 用户信息 -->
  <view class="user-info">
    <image src="{{userInfo.avatar}}" class="user-avatar"></image>
    <view class="user-detail">
      <view class="username">{{userInfo.username}}</view>
    </view>
    <button class="edit-btn" bindtap="navigateToEdit">编辑</button>
  </view>
  
  <!-- 数据统计 -->
  <view class="stats">
    <view class="stat-item">
      <view class="stat-value">{{stats.travelCount}}</view>
      <view class="stat-label">旅行次数</view>
    </view>
    <view class="stat-item">
      <view class="stat-value">{{stats.followers}}</view>
      <view class="stat-label">粉丝</view>
    </view>
    <view class="stat-item">
      <view class="stat-value">{{stats.following}}</view>
      <view class="stat-label">关注</view>
    </view>
  </view>
  
  <!-- 功能列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateToMyTrips">
      <text>我的行程</text>
    </view>
    <view class="menu-item" bindtap="navigateToFavorites">
      <text>我的收藏</text>
    </view>
    <view class="menu-item" bindtap="navigateToOrders">
      <text>我的订单</text>
    </view>
    <view class="menu-item" bindtap="navigateToSettings">
      <text>设置</text>
    </view>
  </view>
</view>
