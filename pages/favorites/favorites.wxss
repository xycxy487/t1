/* pages/favorites/favorites.wxss */
.favorites-container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.tab-item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
}

.tab-item.active {
  color: #07C160;
  border-bottom: 4rpx solid #07C160;
}

/* 地点收藏样式 */
.place-item {
  display: flex;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.place-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.place-info {
  flex: 1;
}

.place-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.place-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.place-tags text {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  color: #888;
}

/* 游记收藏样式 */
.note-item {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.note-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.note-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.note-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.note-stats text {
  font-size: 24rpx;
  color: #888;
  margin-right: 20rpx;
}

/* 商品收藏样式 */
.products-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 200rpx;
}

.product-info {
  padding: 15rpx;
}

.product-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  font-size: 26rpx;
  color: #f44;
  font-weight: bold;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
